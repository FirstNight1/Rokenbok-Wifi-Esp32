{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Upload main.py",
            "type": "shell",
            "command": "python -m mpremote connect COM10 cp ./main.py :/main.py; python -m mpremote reset",
            "options": {
                "cwd": "${workspaceFolder}/RokVehicle"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Upload all files",
            "type": "shell",
            "command": "python -m mpremote connect COM10 cp -r . :/; python -m mpremote reset",
            "options": {
                "cwd": "${workspaceFolder}/RokVehicle"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Upload RokVision files",
            "type": "shell",
            "command": "python -m mpremote connect COM14 cp -r . :/; python -m mpremote connect COM14 reset",
            "options": {
                "cwd": "${workspaceFolder}/RokVision"
            },
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Open REPL",
            "type": "shell",
            "command": "python -m mpremote connect COM10 repl",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Open RokVision REPL",
            "type": "shell",
            "command": "python -m mpremote connect COM14 repl",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Erase Flash and reflash firmware",
            "type": "shell",
            "command": "python -m esptool --port COM13 erase_flash; sleep 10; python -m esptool --chip esp32s3 --port COM13 write_flash -z 0x0 'c:\\Users\\Tim Ehrlich\\Downloads\\firmware.bin'",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Show all files",
            "type": "shell",
            "command": "python -m mpremote connect COM10 fs tree",
            "group": "build",
            "problemMatcher": []
        },
        {
            "label": "Remove all files from board",
            "type": "shell",
            "command": "python -m mpremote connect COM14 rm -r :/",
            "group": "build",
            "problemMatcher": []
        }
    ]
}